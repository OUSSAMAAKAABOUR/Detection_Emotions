<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgg"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:hint="Se connecter"
        android:textSize="20sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        android:textColor="#2196F3"
        />

    <EditText
        android:id="@+id/login"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="50dp"
        android:inputType="text"
        android:background="#888D91"
        android:layout_marginBottom="20dp"

        android:hint="            Login">
    </EditText>

    <EditText
        android:id="@+id/pass"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:background="#888D91"
        android:hint="            Password">

    </EditText>


    <TextView
        android:id="@+id/err"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Erreur de saisie !!"
        android:textSize="20dp"
        android:visibility="invisible"
        android:textColor="#DC190A"

        android:layout_gravity="center"
        android:gravity="center"
        ></TextView>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember Password"
        android:textSize="20dp"
        android:textColor="#C6B8B7"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="8dp"
        ></CheckBox>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/btnc"
            android:layout_width="125dp"
            android:layout_height="60dp"
            android:layout_marginLeft="60dp"
            android:backgroundTint="#2196F3"
            android:text="Login"></Button>
        <Button
            android:id="@+id/btnr"
            android:orientation="horizontal"
            android:layout_width="125dp"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:backgroundTint="#FFC107"
            android:textColor="#0E0E0E"

            android:text="Register"></Button>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login with Face ID"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:textColor="#070707"
        android:textAlignment="center"
        android:layout_marginLeft="80dp"
        ></TextView>

    <ImageView
        android:id="@+id/btncamere"
        android:layout_width="119dp"
        android:layout_height="120dp"
        android:layout_marginLeft="150dp"
        android:background="@drawable/face"

        >

    </ImageView>




</LinearLayout>

